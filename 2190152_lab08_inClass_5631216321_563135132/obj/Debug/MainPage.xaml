    <Page
    x:Class="_2190152_lab08_inClass_5631216321.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:_2190152_lab08_inClass_5631216321"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">



    <Grid>
        <Image x:Name="banner" 
               HorizontalAlignment="Left" 
               Height="52" Margin="121,28,0,0" 
               VerticalAlignment="Top" 
               Width="168" 
               Source="Assets/bannerpic.png"/>
        <TextBlock x:Name="nameTextBlock" 
                   HorizontalAlignment="Left" 
                   Margin="39,119,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="33" Width="83" 
                   Foreground="#FFA02525" 
                   FontFamily="Calibri" 
                   FontSize="25" 
                   Text="NAME" 
                   SelectionHighlightColor="#FFBF514C"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" 
                 Margin="127,118,0,0" 
                 TextWrapping="Wrap" 
                 Text="Enter Your Name" 
                 VerticalAlignment="Top" 
                 Width="232" Height="21" 
                 RenderTransformOrigin="0.496,0.48" Background="White" />
        <TextBlock x:Name="genderTextBlock" 
                   HorizontalAlignment="Left" 
                   Margin="39,179,0,0" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Top" 
                   Height="33" Width="100"
                   Foreground="#FFA02525" 
                   FontFamily="Calibri" 
                   FontSize="25" Text="GENDER" 
                   SelectionHighlightColor="#FFBF514C"/>
        <ComboBox x:Name="genderComboBox" 
                  HorizontalAlignment="Left" 
                  Margin="144,169,0,352"
                  Width="177" 
                  Foreground="Black" 
                  BorderBrush="#FFA0A0A0" Background="White">
            <ComboBoxItem x:Name="MALE" Content="MALE"/>
            <ComboBoxItem x:Name="FEMALE" Content="FEMALE"/>
        </ComboBox>
        <TextBlock x:Name="heightTextBlock" HorizontalAlignment="Left" Margin="39,244,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="88" Foreground="#FFA02525" FontFamily="Calibri" FontSize="25" Text="HEIGHT" SelectionHighlightColor="#FFBF514C"/>
        <TextBlock x:Name="hobbiesTextBlock" HorizontalAlignment="Left" Margin="39,299,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="55" Width="145" Foreground="#FFA02525" FontFamily="Calibri" FontSize="35" Text="HOBBIES" SelectionHighlightColor="#FFBF514C"/>
        <CheckBox x:Name="tennisCheckBox" 
                  Content="Tennis" 
                  Foreground="#FFA02525" 
                  HorizontalAlignment="Left" 
                  Margin="45,355,0,0" 
                  VerticalAlignment="Top"  
                  Width="100" 
                  Height="65" FontSize="20"/>
        <CheckBox x:Name="footballCheckBox" 
        	Content="Football" 
        	Foreground="#FFA02525" 
        	HorizontalAlignment="Left" 
        	Margin="213,355,0,0" 
        	VerticalAlignment="Top"  
        	Width="100" 
        	Height="65" FontSize="20"/>
        <CheckBox x:Name="basketballCheckBox" 
        	Content="Basketball" 
        	Foreground="#FFA02525" 
        	HorizontalAlignment="Left" 
        	Margin="45,427,0,0" 
        	VerticalAlignment="Top"  
        	Width="100" 
        	Height="65" FontSize="20"/>
        <CheckBox x:Name="dancingCheckBox" 
        	Content="Dancing" 
        	Foreground="#FFA02525" 
        	HorizontalAlignment="Left" 
        	Margin="213,427,0,0" 
        	VerticalAlignment="Top"  
        	Width="100" 
        	Height="65" FontSize="20"/>
        <Button x:ConnectionId='1' x:Name="submitButton" Content="SUBMIT" HorizontalAlignment="Left" Margin="144,513,0,0" VerticalAlignment="Top"                />
        <TextBox x:ConnectionId='2' x:Name="heightTextBox" HorizontalAlignment="Left" 
        	Margin="127,244,0,0" 
        	TextWrapping="Wrap" 
        	Text="150" 
        	VerticalAlignment="Top" 
        	Width="57" Height="21" 
        	RenderTransformOrigin="0.496,0.48" Background="White"                             />
        <Button x:ConnectionId='3' x:Name="deButton" Content="-" 
                HorizontalAlignment="Left" 
                Margin="212,234,0,0" 
                VerticalAlignment="Top" 
                Width="41" 
                Height="40" MinWidth="0"                
        />
        <Button x:ConnectionId='4' x:Name="inButton" Content="+" 
        	HorizontalAlignment="Left" 
        	Margin="252,234,0,0" 
        	VerticalAlignment="Top" 
        	Width="41" 
        	Height="40" MinWidth="0"                
        />


    </Grid>
</Page>

